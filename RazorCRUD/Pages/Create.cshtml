@page
@model RazorCRUD.Pages.CreateModel
@{
    ViewData["Title"] = "Create Student";
}

<h1>Create Student</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Student.Name"></label>
        <input asp-for="Student.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Student.City"></label>
        <input asp-for="Student.City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Student.Age"></label>
        <input asp-for="Student.Age" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
